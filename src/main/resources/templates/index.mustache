{{> layout/header}}

<div class="container mt-5">
    <h1 class="text-center mb-4 fw-semibold">게시글 목록</h1>

    <div class="text-end mb-3">
        {{#sessionUser}}
            <a href="/board/save-form" class="btn btn-success">글쓰기</a>
        {{/sessionUser}}
    </div>

    <table class="table table-hover text-center align-middle">
        <thead class="table-light">
        <tr>
            <th>번호</th>
            <th class="text-start">제목</th>
            <th>작성자</th>
            <th>작성일</th>
        </tr>
        </thead>
        <tbody>
        {{#boardPage.content}}
            <tr>
                <td>{{id}}</td>
                <td class="text-start">
                    <a href="/board/{{id}}">{{title}}</a>
                </td>
                <td>{{user.username}}</td>
                <td>{{time}}</td>
            </tr>
        {{/boardPage.content}}

        {{^boardPage.content}}
            <tr>
                <td colspan="4">게시글이 없습니다.</td>
            </tr>
        {{/boardPage.content}}
        </tbody>
    </table>
    <ul class="pagination d-flex justify-content-center">
        <!--   이전 페이지 버튼     -->
        {{#previousPageNumber}}
            <li class="page-item">
                <!--  http://localhost:8080/?page=1&size10    -->
                <a class="page-link" href="/?page={{previousPageNumber}}&size={{boardPage.size}}">Previous</a>
            </li>
        {{/previousPageNumber}}

        {{^previousPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        {{/previousPageNumber}}

        <!-- 페이지 번호   -->
        {{#pageLinks}}
            <li class="page-item {{#active}}active{{/active}}">
                <a class="page-link" href="/?page={{displayNumber}}&size={{boardPage.size}}">{{displayNumber}}</a>
            </li>
        {{/pageLinks}}

        <!--   다음 페이지 버튼     -->
        {{#nextPageNumber}}
            <li class="page-item">
                <!--  http://localhost:8080/?page=1&size10    -->
                <a class="page-link" href="/?page={{nextPageNumber}}&size={{boardPage.size}}">Next</a>
            </li>
        {{/nextPageNumber}}

        {{^nextPageNumber}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        {{/nextPageNumber}}
    </ul>
</div>

{{> layout/footer}}